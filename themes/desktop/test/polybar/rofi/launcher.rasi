configuration {
	font:							"Iosevka 9";
    show-icons:                     true;
	icon-theme: 					"Papirus";
    display-drun: 					"î§Œ";
    drun-display-format:            "{name}";
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

@import "colors.rasi"

window {
    transparency:                   "real";
    background-color:               @background;
    text-color:                     @foreground;
	border:							0px 0px 0px 0px;
	border-color:					@border;
    border-radius:                  0px;
	width:							500px;
    location:                       center;
    x-offset:                       0;
    y-offset:                       0;
}

entry {
    background-color:               @background-alt;
    text-color:                     @foreground-alt;
    placeholder-color:              @foreground-alt;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Search...";
	padding: 						0px 0px 0px 0px;
    blink:                          true;
}

inputbar {
	children: 						[ entry ];
    background-color:               @background-alt;
    text-color:                     @foreground;
    expand:                         false;
	border:							2px 2px 2px 2px;
    border-radius:                  0px;
	border-color:					@border-alt;
    margin:                         0px;
    padding:                        10px;
}

listview {
    background-color:               @background-alt;
    padding:                        0px;
    columns:                        1;
    lines:                          7;
    spacing:                        5px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @background-alt;
	border:							1px;
    border-radius:                  0px;
	border-color:					@border-alt;
    children:                       [ inputbar, listview ];
    spacing:                       	5px;
    padding:                        5px;
}

element {
    background-color:               @background-alt;
    text-color:                     @foreground-alt;
    orientation:                    horizontal;
    border-radius:                  0px;
	padding: 						8px;
}

element-icon {
    size:                           24px;
    border:                         0px;
}

element-text {
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0.5;
    margin:                         0px 2.5px 0px 2.5px;
}

element selected {
    background-color:               @background;
    text-color:                     @foreground;
	border:							0px 0px 0px 0px;
    border-radius:                  0px;
    border-color:                  	@border;
}