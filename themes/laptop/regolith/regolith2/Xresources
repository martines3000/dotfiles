regolith.look.path: /usr/share/regolith-look/blackhole

! Swaps ALT and WIN keys
i3-wm.mod: Mod1
i3-wm.alt: Mod4

! Put bar at top
i3-wm.bar.position: top

! Style bar
i3-wm.bar.workspace.focused.boder.color: #ff0000
i3-wm.bar.workspace.focused.background.color: #ffffff
i3-wm.bar.workspace.focused.text.color: #ff0000

i3-wm.bar.workspace.inactive.text.color: #ffffff

! Swap space and d keybindings
i3-wm.binding.launcher.app: d
i3-wm.binding.display: space

! Kill keybinding
i3-wm.binding.exit_app: q

! Lock screen
i3-wm.binding.lock: l

! Mouse focus
i3-wm.gaps.focus_follows_mouse: yes

! Wallpaper
regolith.wallpaper.file: ~/.config/regolith2/wallpaper.png
regolith.lockscreen.wallpaper.file: ~/.config/regolith2/wallpaper.png
